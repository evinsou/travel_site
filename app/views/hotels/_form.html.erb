<%= simple_form_for(@hotel, :html => {:class => 'form-horizontal' }) do |f| %>
    <%= f.input :title, :input_html => { :size=>"20", :placeholder => "enter title"} %>
    <%= f.input :description, :input_html => { :size=>"30", :placeholder => "place for description"} %>
    <%= f.input :city, :input_html => { :size=>"20", :placeholder => "city where hotel is"} %>
    <%= f.input :rating, collection: [ "1", "2", "3", "4", "5"],
                         include_blank: false,
                         as: :radio_buttons %>
  <%= f.button :submit %>
<% end %>
