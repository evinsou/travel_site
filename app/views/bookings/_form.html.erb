<%= simple_form_for([@bookingable, @booking], :html => {:class => 'form-horizontal row' }) do |f| %>
  <div class='twelve columns'>
    <div class='row'>
      <div class='eight columns centered'>
    <fieldset>
    <legend>Контактная информация</legend>
    <%#= f.input :email, :input_html => { :size=>"20", :placeholder => "your valid email"} %>
