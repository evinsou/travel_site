
<%= div_for @booking %>
  <%= render 'tours/_tour', locals: @booking.tour if @booking.tour %>
  <%= render 'hotels/_hotel', locals: @booking.hotel if @booking.hotel %>
    <span class='actions'>
    <% if can? :update, @booking %>
      <%= link_to 'edit', edit_vacancy_path(@booking)%>
    <% end %>
    <% if can? :destroy, @booking %>
      <%= link_to 'delete', @booking, :confirm => 'Are you sure?', :method => :delete %>
    <% end %>
    </span>
<% end %>