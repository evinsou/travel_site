<%= render 'tours/tour' %>
<%= simple_form_for(@booking, :html => {:class => 'form-horizontal' }) do |f| %>
  <!-- data about hotel or tour, maybe another partial, which was choosing by customer -->
  <!-- here a place for tour and its property -->
  <fieldset>
    <legend>Выберите тур, отель, время </legend>

    <%= f.input :tour, :collection=> Tour.all, :input_html => { :placeholder => "your valid email",
      }, prompt: 'select tour you want' %>
    <%= f.input :hotel, :collection=> Hotel.all, :input_html => { :placeholder => "your valid email",
      prompt: 'select tour you want'}, prompt: 'select hotel you want' %>
  </fieldset>
  <fieldset>
    <legend>Контактная информация</legend>
    <%= f.input :email, :input_html => { :size=>"20", :placeholder => "your valid email"} %>
    <%= f.input :person_name, :input_html => { :size=>"20", :placeholder => "name of you"} %>
    <%= f.input :phone, :input_html => { :size=>"20", :placeholder => "contact phone"} %>
  </fieldset>
  <%= f.button :submit %>
<% end %>
<% end %>